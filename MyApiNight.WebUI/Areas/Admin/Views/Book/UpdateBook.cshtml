@model UpdateBookDto
@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Kitap Bilgilerini Güncelle</div>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="bookName">Kitap Adı</label>
                        <input type="hidden" asp-for="BookID" />
                        <input asp-for="BookName" type="text" class="form-control" id="bookName" placeholder="Kitabın Adı">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="price">Fiyatı</label>
                        <input asp-for="Price" type="text" class="form-control" id="price" placeholder="Kitabın Satış Fiyatı">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="pageCount">Sayfa Sayısı</label>
                        <input asp-for="PageCount" type="text" class="form-control" id="pageCount" placeholder="Toplam Sayfa Sayısı">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="imageUrl">Kitap Görseli</label>
                        <input asp-for="ImageUrl" type="text" class="form-control" id="imageUrl" placeholder="Kitabın Kapak Görseli">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="writerId">Yazar</label>
                        <input asp-for="Writer" type="text" class="form-control" id="writer" placeholder="Yazar Adı-Soyadı">

                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for="categoryId">Kategori</label>
                        <input asp-for="Category" type="text" class="form-control" id="category" placeholder="Kitabın Kategorisi">

                    </div>
                </div>
            </div>
        </div>
        <div class="card-action">
            <button class="btn btn-success">Kaydet</button>
            <button class="btn btn-danger">Vazgeç</button>
        </div>
    </form>
</div>

