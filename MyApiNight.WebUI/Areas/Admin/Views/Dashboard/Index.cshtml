@model AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Welcome, @Model.UserName!</h1>
            <p class="text-center text-muted">İstatistiklerin Genel Görünümü:</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Categories</h5>
                    <h2 class="card-text text-center">@ViewBag.Categories</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Features</h5>
                    <h2 class="card-text text-center">@ViewBag.Features</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Writers</h5>
                    <h2 class="card-text text-center">@ViewBag.Writers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3 shadow">
                <div class="card-body">
                    <h5 class="card-title">Total Books</h5>
                    <h2 class="card-text text-center">@ViewBag.Books</h2>
                </div>
            </div>
        </div>
    </div>
</div>

