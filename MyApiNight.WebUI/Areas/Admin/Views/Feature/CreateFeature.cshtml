@model CreateFeatureDto
@{
    ViewData["Title"] = "CreateFeature";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title">Öne Çıkarılacak Kitap Ekle</div>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for=>Kitap Adı</label>
                        <input asp-for="BookName" type="text" class="form-control" placeholder="Kitabın Adı">
                    </div>
                </div>
                <div class="col-md-6 col-lg-6">
                    <div class="form-group">
                        <label for=>Kitap Görseli</label>
                        <input asp-for="ImageUrl" type="text" class="form-control"  placeholder="Kitabın Görseli">
                    </div>
                </div>
                <div class="col-md-12 col-lg-12">
                    <div class="form-group">
                        <label for="comment">Kitap Açıklaması</label>
                        <textarea asp-for="Description" class="form-control" id="comment" rows="5"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-action">
            <button class="btn btn-success">Kaydet</button>
            <button class="btn btn-danger">Vazgeç</button>
        </div>
    </form>
</div>

