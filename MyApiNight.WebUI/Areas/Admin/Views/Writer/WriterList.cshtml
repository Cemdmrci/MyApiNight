@model List<ResultWriterDto>
@{
    ViewData["Title"] = "WriterList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<br />
<div class="container">
	<h1 style="text-align:center; color:black">Yazarlarım</h1>
	<table class="table table-striped" style="color:black">
		<tr>
			<th>#</th>
			<th>ADI</th>
			<th>SOYADI</th>
			<th>GÖRSEL</th>
			<th>SEÇENEKLER</th>

		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.WriterId</td>
				<td>@item.Name</td>
				<td>@item.Surname</td>
				<td>
					<img src="@item.ImageUrl" style="height:200px; width:auto" />
				</td>
				<td>
					<a href="/Admin/Writer/DeleteWriter/@item.WriterId" class="btn btn-danger">Sil</a>
					<a href="/Admin/Writer/UpdateWriter/@item.WriterId" class="btn btn-danger">Güncelle</a>
				</td>
			</tr>
		}
	</table>
	<a href="/Admin/Writer/CreateWriter" class="btn btn-primary">Yeni Yazar Ekle </a>
</div>
<br />

